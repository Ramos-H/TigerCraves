<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/cardview1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_gravity="center"
        android:padding="40dp"
        android:src="@drawable/rectangle_6tigeropa" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/telegrafregular"
            android:gravity="center"
            android:text="Filter"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/telegrafregular"
                android:text="Minimum Price: "/>

            <com.itg3.grp1.mobdevproject.ValEditText
                android:id="@+id/etMinPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/telegrafregular"
                android:text="Maximum Price: "/>

            <com.itg3.grp1.mobdevproject.ValEditText
                android:id="@+id/etMaxPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/telegrafregular"
                android:text="Minimum Average Rating: "/>

            <com.itg3.grp1.mobdevproject.ValEditText
                android:id="@+id/etAveRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/cancelBtn"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/group_3cancelbtn"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/resetBtn"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/group_4resetbtn"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/applyBtn"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/group_5applybtn"
                android:scaleType="fitCenter"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>