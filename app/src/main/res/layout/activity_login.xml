<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/group_1mainbg"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="295dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="55dp"
        android:paddingEnd="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.922"
        android:background="@drawable/group_2layoutbrdr">

        <com.itg3.grp1.tigercraves.ValEditText
            android:id="@+id/fieldEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="10dp"/>

        <com.itg3.grp1.tigercraves.ValEditText
            android:id="@+id/fieldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginBottom="10dp"/>

        <ImageButton
            android:id="@+id/btnLogin"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:layout_marginBottom="20dp"
            android:src="@drawable/loginbtn"
            android:scaleType="centerInside"
            android:onClick="login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/marykate"
                android:gravity="end"
                android:text="Don't have an Account?"
                android:textColor="#E05D5D" />

            <ImageButton
                android:id="@+id/btnRegister"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:src="@drawable/group_2registerbtn"
                android:scaleType="centerInside"
                android:onClick="goToRegister" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>