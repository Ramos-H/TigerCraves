
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#EC9F54">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/detailsbgImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="tiger card"
                android:scaleType="centerCrop"
                android:src="@drawable/tigercard" />

            <ImageView
                android:id="@+id/restaurantImageView"
                android:layout_width="327dp"
                android:layout_height="233dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="187dp"
                android:layout_gravity="top|start"
                android:src="@drawable/imgplaceholder" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginStart="80dp"
                android:layout_marginTop="145dp"
                android:fontFamily="@font/marykate"
                android:text="Restaurant Name"
                android:textColor="#EC9F54"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_gravity="start|center"
                android:layout_marginStart="75dp"
                android:layout_marginTop="115dp"
                android:fontFamily="@font/marykate"
                android:text="123 Anywhere St., Any City"
                android:textColor="#8B8B8B"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="80dp"
                android:layout_marginTop="165dp"
                android:fontFamily="@font/marykate"
                android:text="Rating"
                android:textColor="#8B8B8B"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvMinPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="75dp"
                android:layout_marginTop="268dp"
                android:fontFamily="@font/marykate"
                android:text="₱₱₱₱₱"
                android:textColor="#8B8B8B"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/tvMaxPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="247dp"
                android:layout_marginTop="268dp"
                android:fontFamily="@font/marykate"
                android:text="₱₱₱₱₱"
                android:textColor="#8B8B8B"
                android:textSize="23sp" />

            <ImageButton
                android:id="@+id/btnBackToListings"
                android:layout_width="99dp"
                android:layout_height="93dp"
                android:layout_gravity="top|start"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="Navigates back to listing page"
                app:srcCompat="@drawable/backtolistings_btn" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="500dp">

            <!-- Review Section -->

            <ImageView
                android:id="@+id/bottomImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="bottom image"
                android:scaleType="centerCrop"
                android:src="@drawable/reviewsbg" />

            <!-- HorizontalScrollView for Review Cards -->
            <HorizontalScrollView
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="118dp"
                android:contentDescription="description">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Repeat this CardView block for each review -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="8dp">

                        <!-- Your Review Card layout here -->

                    </androidx.cardview.widget.CardView>

                    <!-- Repeat the above CardView block for a total of 4 times -->

                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="8dp">

                        <!-- Your Review Card layout here -->

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="255dp"
                        android:layout_height="300dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="8dp">

                        <!-- Your Review Card layout here -->

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="8dp">

                        <!-- Your Review Card layout here -->

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="8dp">

                        <!-- Your Review Card layout here -->

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        app:cardCornerRadius="8dp">

                        <!-- Your Review Card layout here -->

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <ImageButton
                android:id="@+id/btnAddReview"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginStart="80dp"
                android:layout_marginTop="450dp"
                android:background="@android:color/transparent"
                android:contentDescription="Navigates back to listing page"
                app:srcCompat="@drawable/addreview_btn" />
        </FrameLayout>

    </LinearLayout>
</ScrollView>
