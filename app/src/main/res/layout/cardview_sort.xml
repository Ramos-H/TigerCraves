<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/cardview1"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="20dp"
    >

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="420dp"
        android:background="@drawable/rectangle_6tigeropa"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="message"
            android:fontFamily="@font/telegrafregular"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/telegrafregular"
                android:text="Name"
                android:textSize="14sp">

            </RadioButton>

            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/telegrafregular"
                android:text="Average rating"
                android:textSize="14sp">

            </RadioButton>

            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/telegrafregular"
                android:text="Price"
                android:textSize="14sp">

            </RadioButton>
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="message"
                android:textSize="15dp"
                android:fontFamily="@font/telegrafregular"
                android:textStyle="bold"></TextView>

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">


                <RadioButton
                    android:id="@+id/rbf1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/telegrafregular"
                    android:text="Ascending"
                    android:textSize="14sp">

                </RadioButton>

                <RadioButton
                    android:id="@+id/rbf2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/telegrafregular"
                    android:text="Descending"
                    android:textSize="14sp">

                </RadioButton>


            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/resetBtn"
                    android:layout_width="90dp"
                    android:layout_height="38dp"

                    android:background="@drawable/group_4resetbtn"></Button>

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="90dp"
                    android:layout_height="38dp"
                    android:background="@drawable/group_3cancelbtn"></Button>
            </LinearLayout>

            <Button
                android:id="@+id/applyBtn"
                android:layout_width="116dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/group_5applybtn"></Button>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>