<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/cardview1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="293dp"
        android:layout_gravity="center"
        android:padding="60dp"
        android:src="@drawable/rectangle_6tigeropa" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/telegrafregular"
                android:gravity="center"
                android:text="Sorting Criteria"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/telegrafregular"
                    android:text="Name"
                    android:textColor="#93866D"
                    android:textSize="14sp">

                </RadioButton>

                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/telegrafregular"
                    android:text="Average rating"
                    android:textColor="#93866D"
                    android:textSize="14sp">

                </RadioButton>

                <RadioButton
                    android:id="@+id/rb3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/telegrafregular"
                    android:text="Price"
                    android:textColor="#93866D"
                    android:textSize="14sp">

                </RadioButton>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/telegrafregular"
                android:gravity="center"
                android:text="Sorting Direction"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RadioButton
                    android:id="@+id/rbf1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/telegrafregular"
                    android:text="Ascending"
                    android:textColor="#93866D"
                    android:textSize="14sp">

                </RadioButton>

                <RadioButton
                    android:id="@+id/rbf2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/telegrafregular"
                    android:text="Descending"
                    android:textColor="#93866D"
                    android:textSize="14sp">

                </RadioButton>


            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/cancelBtn"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/group_3cancelbtn"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/resetBtn"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/group_4resetbtn"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/applyBtn"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/group_5applybtn"
                android:scaleType="fitCenter"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>